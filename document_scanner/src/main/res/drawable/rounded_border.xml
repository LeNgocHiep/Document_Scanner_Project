<!-- res/drawable/rounded_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color and corner radius -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Background color -->
            <corners android:radius="10dp" /> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@android:color/white" /> <!-- Border width and color -->
            <corners android:radius="10dp" /> <!-- Corner radius (same as background) -->
        </shape>
    </item>
</layer-list>
